<% provide :navigation_products, "active" %>
<h2><%= t ".all_products" %></h2>
<hr/>
<table class="table">
  <thead>
    <th><%= t ".index" %>
    <th><%= t ".name" %></th>
    <th><%= t ".category" %></th>
    <th><%= t ".description" %></th>
    <th><%= t ".price" %></th>
  </thead>
  <tbody>
    <%= render partial: "product", collection: @products, as: :product %>
  </tbody>
</table>
<%= paginate @products %>
