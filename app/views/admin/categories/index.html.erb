<% provide :navigation_categories, "active" %>
<h2><%= t ".all_categories" %></h2>
<hr/>
<table class="table">
  <thead>
    <th><%= t ".index" %>
    <th><%= t ".name" %></th>
    <th><%= t ".description" %></th>
  </thead>
  <tbody>
    <%= render partial: "category", collection: @categories, as: :category %>
  </tbody>
</table>
<%= paginate @categories %>
