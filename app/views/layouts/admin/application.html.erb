<!DOCTYPE html>
<html>
  <head>
    <title><%= t ".page_title" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin/application", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin/application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <div id="wrapper">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%= render "layouts/admin/top_menu" %>
        <%= render "layouts/admin/sidebar_menu" %>
      </nav>

      <div id="page-wrapper">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
