<% provide :navigation_products, "active" %>
<h2>All products</h2>
<hr/>
<table class="table table-hover" id="table-styled">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "product", collection: @products, as: :product %>
  </tbody>
</table>
